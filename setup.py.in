tcpmd5bf_srcs = [ '@top_srcdir@/loki/tcpmd5/tcpmd5bf.c', '@top_srcdir@/lib/md5.c' ]
tcpmd5bf_incdirs = [ '@top_srcdir@' ]
tcpmd5bf_libdirs = []
